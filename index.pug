  script.
    // ---------------------------
    // Language switching
    // ---------------------------
    const buttons = document.querySelectorAll('#language-switch button[data-lang]');
    // Only translatable content, NOT the switch buttons
    const elements = document.querySelectorAll('[data-lang]:not(#language-switch button)');
  
    function setLanguage(lang) {
      elements.forEach(el => {
        el.style.display = el.dataset.lang === lang ? '' : 'none';
      });
      localStorage.setItem('lang', lang);
      document.documentElement.lang = lang;
    }
  
    buttons.forEach(btn => {
      btn.addEventListener('click', () => setLanguage(btn.dataset.lang));
    });
  
    const savedLang = localStorage.getItem('lang') || 'nl';
    setLanguage(savedLang);

    // ---------------------------
    // Theme switching (light/dark)
    // ---------------------------
    const themeToggle = document.getElementById('theme-toggle');
    const themeMeta = document.querySelector('meta[name="theme-color"]');

    function applyTheme(theme) {
      // theme: 'light' | 'dark'
      document.documentElement.dataset.theme = theme;
      localStorage.setItem('theme', theme);

      // Update slider state
      if (themeToggle) themeToggle.checked = theme === 'dark';

      // Update browser UI theme-color to match current theme
      if (themeMeta) {
        themeMeta.setAttribute('content', theme === 'dark' ? '#1a2029' : '#eef1f6');
      }
    }

    function getInitialTheme() {
      const saved = localStorage.getItem('theme');
      if (saved === 'light' || saved === 'dark') return saved;
      return window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches
        ? 'dark'
        : 'light';
    }

    const initialTheme = getInitialTheme();
    applyTheme(initialTheme);

    if (themeToggle) {
      themeToggle.addEventListener('change', () => {
        applyTheme(themeToggle.checked ? 'dark' : 'light');
      });
    }

    // If the user has not chosen a theme yet, follow OS changes
    if (!localStorage.getItem('theme') && window.matchMedia) {
      const mql = window.matchMedia('(prefers-color-scheme: dark)');
      mql.addEventListener('change', (e) => applyTheme(e.matches ? 'dark' : 'light'));
    }
